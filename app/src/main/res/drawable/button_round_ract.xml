<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <gradient android:startColor="#30aaff"
                android:endColor="#2ad0ff"
                android:centerX="90%" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#ffaa30"
                android:endColor="#ffd02a"
                android:centerX="90%" />
            <corners android:radius="30dp" />
        </shape>
    </item>

</selector>